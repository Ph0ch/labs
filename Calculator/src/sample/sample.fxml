<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets topRightBottomLeft="15" />
    </padding>
    <columnConstraints>
        <ColumnConstraints prefWidth="50" />
        <ColumnConstraints prefWidth="50" />
        <ColumnConstraints prefWidth="50" />
        <ColumnConstraints prefWidth="50" />
        <ColumnConstraints prefWidth="50" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints prefHeight="50" />
    </rowConstraints>

    <TextField
        GridPane.RowIndex="0" GridPane.ColumnIndex="0"
        GridPane.columnSpan="5"
        text=""
        fx:id="tfValue" />


    <Button
            GridPane.RowIndex="1" GridPane.ColumnIndex="0"
            GridPane.fillWidth="true" maxWidth="Infinity"
            GridPane.fillHeight="true" maxHeight="Infinity"
            mnemonicParsing="false"
            text="+"
            onMouseClicked="#onBtnAddClick" />
    <Button
            GridPane.RowIndex="1" GridPane.ColumnIndex="1"
            GridPane.fillWidth="true" maxWidth="Infinity"
            GridPane.fillHeight="true" maxHeight="Infinity"
            mnemonicParsing="false"
            text="-"
            onMouseClicked="#onBtnSubClick" />
    <Button
            GridPane.RowIndex="1" GridPane.ColumnIndex="2"
            GridPane.fillWidth="true" maxWidth="Infinity"
            GridPane.fillHeight="true" maxHeight="Infinity"
            mnemonicParsing="false"
            text="*"
            onMouseClicked="#onBtnMulClick" />
    <Button
            GridPane.RowIndex="1" GridPane.ColumnIndex="3"
            GridPane.fillWidth="true" maxWidth="Infinity"
            GridPane.fillHeight="true" maxHeight="Infinity"
            mnemonicParsing="false"
            text="/"
            onMouseClicked="#onBtnDivClick" />
    <Button
            GridPane.RowIndex="1" GridPane.ColumnIndex="4"
            GridPane.fillWidth="true" maxWidth="Infinity"
            GridPane.fillHeight="true" maxHeight="Infinity"
            mnemonicParsing="false"
            text="="
            onMouseClicked="#onBtnAnswerClick" />

</GridPane>