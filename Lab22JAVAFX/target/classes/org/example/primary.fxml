<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.PrimaryController">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#NewDocumentAction" text="New" />
                  <MenuItem mnemonicParsing="false" onAction="#OpenDocumentAction" text="Open" />
                  <MenuItem mnemonicParsing="false" onAction="#SaveDocumentAction" text="Save" />
                  <MenuItem mnemonicParsing="false" onAction="#ExitAction" text="Exit" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="File Type">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#ChoiceMusic" text="MusicDocument" />
                  <MenuItem mnemonicParsing="false" onAction="#ChoiceImage" text="ImageDocument" />
                  <MenuItem mnemonicParsing="false" onAction="#ChoiceText" text="TextDocument" />
               </items>
            </Menu>
        </menus>
      </MenuBar>
      <Label text="Выберете документ и действие" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
